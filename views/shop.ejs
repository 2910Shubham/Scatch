<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>

    <% if(success.length>0){%> 
        <div class="absolute top-5 left-1/2 -translate-x-1/2  -translate-y-1/2 p-3 rounded-md bg-blue-500"><span class="inline-block mt-1 mb-1 text-white"><%= success %> </span></div>
    <%} %>

    <div class="bg-white h-screen w-full">
        <header class="flex relative w-full z-1 m-2 p-5 mt-5">
            <h1 class="absolute top-0 left-10 text-3xl text-zinc-900">Shop.</h1>
            <nav class="absolute top-0 right-35 text-l text-zinc-900">
                <a href="/shop" class="absolute right-70 hover:text-black hover:font-bold transition">Home</a>
                <a href="#" class="absolute right-50 hover:text-black hover:font-bold transition">Products</a>
                <a href="/cart" class="absolute right-27 hover:text-black hover:font-bold transition">Carts</a>
                <a href="#" class="hover:text-black hover:font-bold transition ">My Accounts</a>
               
            </nav>
        </header>
        <div class="mt-3 w-full">
            <hr class="border-t-2 border-zinc-900">
        </div>
    </div>

    <div>
        <div class="fixed top-30 flex ml-10 z-10">
            <!-- Short By -->
            <div class="flex items-center">
                <label for="options" class="block text-lg font-medium text-gray-700">Short By:</label>
                <select id="options" name="options"
                    class="ml-2 block h-7 w-40 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 font-bold">
                    <option value="option1">Popular</option>
                    <option value="option2">More than 500</option>
                    <option value="option3">Less than 500</option>
                    <option value="option4">More than 1000</option>
                </select>
            </div>
        </div>

        <!-- Collections  -->
        <div class="flex flex-col fixed top-50 bottom-50 ml-10">
            <a href="#" class="text-gray-500 font-medium hover:text-black hover:font-bold transition">New Collection</a>
            <a href="#" class="text-gray-500 font-medium hover:text-black hover:font-bold transition">All Products</a>
            <a href="#" class="text-gray-500 font-medium hover:text-black hover:font-bold transition">Discounted
                Products</a>
        </div>

        <!-- Filter -->
        <div class="flex flex-col fixed bottom-20 ml-10">
            <h1 class="font-medium text-black">Filtered by:</h1>
            <a href="#" class="text-gray-500 font-medium hover:text-black hover:font-bold transition">All Products</a>
            <a href="#" class="text-gray-500 font-medium hover:text-black hover:font-bold transition">Discounted
                Products</a>
        </div>
    </div>

    <div class="absolute top-30 left-35 w-full flex justify-center items-start">
        <div class="w-[80%] flex flex-wrap gap-6">
            <% products.forEach(function(product) { %>
                <div class="bg-[<%= product.bgcolor %>] w-48 h-62 text-[<%= product.textcolor %>] mb-6">
                    <img class="p-3 z-50 h-[200px]" src="data:image/png;base64,<%= product.image.toString('base64') %>"
                        alt="">

                    <!-- Price Section -->
                    <div class="relative text-lg h-16 w-48 bg-[<%= product.panelcolor %>] p-2">
                        <span class="ml-4 block mb-0"><%= product.name %></span>
                        <span class="ml-4 text-lg block  block mb-1">â‚¹<%= product.price %></span>

                        <!-- "+" button in a fixed position on the left-center -->
                        <a href="/addtocart/<%= product._id %>"
                            class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-white rounded-full h-7 w-7 flex items-center justify-center text-black text-sm font-bold">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24">
                                <path fill-rule="evenodd"
                                    d="M 11 2 L 11 11 L 2 11 L 2 13 L 11 13 L 11 22 L 13 22 L 13 13 L 22 13 L 22 11 L 13 11 L 13 2 Z">
                                </path>
                            </svg>
                        </a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>

</html>